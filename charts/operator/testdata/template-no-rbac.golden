apiVersion: apps/v1
kind: Deployment
metadata:
  name: redpanda-operator
  labels:
    
    app.kubernetes.io/name: operator
    helm.sh/chart: operator-0.4.22
    app.kubernetes.io/instance: redpanda-operator
    app.kubernetes.io/version: "v2.1.18-23.3.13"
    app.kubernetes.io/managed-by: Helm
    
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: operator
      app.kubernetes.io/instance: redpanda-operator
  template:
    metadata:
      labels:
        app.kubernetes.io/name: operator
        app.kubernetes.io/instance: redpanda-operator
      annotations:
    spec:
      serviceAccountName: redpanda-operator
      containers:
      - name: manager
        image: "docker.redpanda.com/redpandadata/redpanda-operator:v2.1.18-23.3.13"
        imagePullPolicy: IfNotPresent
        args:
        - --health-probe-bind-address=:8081
        - --metrics-bind-address=127.0.0.1:8080
        - --leader-elect
        - --configurator-tag=v2.1.18-23.3.13
        - --configurator-base-image=docker.redpanda.com/redpandadata/configurator
        - --webhook-enabled=false
        - --namespace=default
        - --log-level=info
        command:
        - /manager
        ports:
        - containerPort: 9443
          name: webhook-server
          protocol: TCP
        livenessProbe:
          httpGet:
            path: /healthz/
            port: 8081
          initialDelaySeconds: 15
          periodSeconds: 20
        readinessProbe:
          httpGet:
            path: /readyz
            port: 8081
          initialDelaySeconds: 5
          periodSeconds: 10
        securityContext:
          allowPrivilegeEscalation: false
        resources:
            {}
      - name: kube-rbac-proxy
        args:
        - --secure-listen-address=0.0.0.0:8443
        - --upstream=http://127.0.0.1:8080/
        - --logtostderr=true
        - --v=10
        image: gcr.io/kubebuilder/kube-rbac-proxy:v0.14.0
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 8443
          name: https
      securityContext:
        runAsUser: 65532
      terminationGracePeriodSeconds: 10
