-- ingress-templating --
ingress:
 enabled: true
 annotations:
   ingress: test
 hosts:
 - host: '{{ "a-host" | quote }}'
   paths:
   - path: /
     pathType: Exact
 tls:
 - secretName: my-secret
   hosts:
   - '{{ "blah" | quote }}'

