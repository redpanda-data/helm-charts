    spec:
      affinity: {}
      containers:
      - args:
        - |
          set -e
          if [[ -n "$REDPANDA_LICENSE" ]] then
            rpk cluster license set "$REDPANDA_LICENSE"
          fi




          rpk cluster config export -f /tmp/cfg.yml


          for KEY in "${!RPK_@}"; do
            config="${KEY#*RPK_}"
            rpk redpanda config set --config /tmp/cfg.yml "${config,,}" "${!KEY}"
          done


          rpk cluster config import -f /tmp/cfg.yml
